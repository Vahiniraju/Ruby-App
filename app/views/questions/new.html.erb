<div class="form-width">
  <%= form_for(@question, url: question_path) do |f| %>
  <div class="form-group">
    <%= render 'shared/error_messages' %>
    <%= f.label :title %>
    <%= f.text_area :title , class: "form-control"%>
  </div>
    <div class="form-group">
      <%= f.label "Category"%>
      <%= f.select :tag_list,options_for_select([["General"],["Sport"]]),{},class: "form-control"%>
    </div>
    <%= f.fields_for :answers do |answer1| %>
      <div class="form-group">
        <%= answer1.text_field :title , class: "form-control", placeholder: answer1.object.is_correct ? 'Correct Answer' : 'Another Answer'%>
      </div>
    <% end %>

  <div class="form-group">
    <%= f.submit "Create Question", class: "btn btn-lg btn-primary btn-block" %>
  </div>
    <% end %>
</div>
